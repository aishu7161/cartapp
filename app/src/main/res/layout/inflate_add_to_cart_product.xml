<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/img_add_cart_product"
        android:layout_width="125dp"
        android:layout_height="130dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_add_cart_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Samsung Galaxy M32"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_add_cart_product"
        app:layout_constraintTop_toTopOf="@+id/img_add_cart_product" />

    <TextView
        android:id="@+id/txt_add_cart_product_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="9,570"
        android:textColor="#7E7B7B"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/txt_add_cart_product_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_add_cart_product_name" />

    <TextView
        android:id="@+id/txt_add_cart_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="8,570"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txt_add_cart_product_original_price"
        app:layout_constraintTop_toBottomOf="@+id/txt_add_cart_product_original_price" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#302F2F"
        app:layout_constraintBottom_toBottomOf="@+id/txt_add_cart_product_original_price"
        app:layout_constraintEnd_toEndOf="@+id/txt_add_cart_product_original_price"
        app:layout_constraintStart_toStartOf="@+id/txt_add_cart_product_original_price"
        app:layout_constraintTop_toTopOf="@+id/txt_add_cart_product_original_price" />

    <TextView
        android:id="@+id/txt_add_cart_product_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Blue"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/txt_add_cart_product_price"
        app:layout_constraintTop_toBottomOf="@+id/txt_add_cart_product_price" />

    <TextView
        android:id="@+id/txt_add_cart_product_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="63 %"
        android:textColor="#0FD312"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txt_add_cart_product_price"
        app:layout_constraintEnd_toStartOf="@+id/txt_add_cart_product_off"
        app:layout_constraintStart_toEndOf="@+id/txt_add_cart_product_price"
        app:layout_constraintTop_toTopOf="@+id/txt_add_cart_product_price" />

    <TextView
        android:id="@+id/txt_add_cart_product_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="off"
        android:textColor="#0FD312"
        android:textSize="16sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/txt_add_cart_product_discount"
        app:layout_constraintStart_toEndOf="@+id/txt_add_cart_product_discount"
        app:layout_constraintTop_toTopOf="@+id/txt_add_cart_product_discount" />

    <ImageView
        android:id="@+id/img_remove_product"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_remove_circle_24"
        app:layout_constraintEnd_toStartOf="@+id/txt_add_num_of_product"
        app:layout_constraintStart_toStartOf="@+id/img_add_cart_product"
        app:layout_constraintTop_toBottomOf="@+id/img_add_cart_product"
       />

    <TextView
        android:id="@+id/txt_add_num_of_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"

        android:text="1"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_remove_product"
        app:layout_constraintEnd_toStartOf="@+id/img_add_product"
        app:layout_constraintStart_toEndOf="@+id/img_remove_product"
        app:layout_constraintTop_toTopOf="@+id/img_remove_product" />

    <ImageView
        android:id="@+id/img_add_product"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_baseline_add_circle_24"
        app:layout_constraintBottom_toBottomOf="@+id/img_remove_product"
        app:layout_constraintStart_toEndOf="@id/txt_add_num_of_product"
        app:layout_constraintTop_toTopOf="@+id/img_remove_product"
       />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#AEA9A9"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_add_product" />
</androidx.constraintlayout.widget.ConstraintLayout>